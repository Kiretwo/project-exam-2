{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".", // required for “paths”
    "paths": {
      "@/*": ["src/*"] // now @/foo → <project>/src/foo
    },
    "types": [
      "node", // Node.js built-ins (fs, path…)
      "vite/client" // import.meta.env, HMR, etc.
    ]
  },
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
